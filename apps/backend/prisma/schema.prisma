// =============================================================================
// DATABASE SCHEMA DESIGN
// =============================================================================
// 
// This schema follows a hybrid naming convention:
// - Business domain terms: French
// - Technical terms: English
//
// Benefits of this approach:
// - Domain clarity: Business stakeholders can directly understand entity names and relationships
// - Technical consistency: Infrastructure terms (id, createdAt, updatedAt, etc.) remain universal
// - Maintainability: Clear separation between business logic and technical implementation
// - Developer experience: Technical aspects follow widely adopted conventions
// - Natural documentation: Schema serves as a bridge between business and technical teams
// =============================================================================

generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

generator zod {
  provider = "zod-prisma-types"
  output   = "../generated/zod"
}

datasource db {
  provider = "postgresql"
  url      = env("PG_URL")
}

model StatutEnum {
  id    String @id
  label String @unique

  users User[]
}

model User {
  id     String @id @default(cuid())
  email  String @unique /// @zod.string.email({ message: 'Invalid email address' }),
  prenom String
  nom    String
  uid    String @unique
  sub    String @unique
  pcData Json

  roleId String
  role   RoleEnum @relation(fields: [roleId], references: [id])

  statutId String
  statut   StatutEnum @relation(fields: [statutId], references: [id])

  entiteId String?
  entite   Entite? @relation(fields: [entiteId], references: [id])

  sessions   Session[]
  changeLogs ChangeLog[]
  uploads    UploadedFile[]
  notes      RequeteEtapeNote[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  token     String   @unique
  expiresAt DateTime
  pcIdToken String   @unique

  createdAt DateTime @default(now())
}

model Entite {
  id                 String @id @default(uuid())
  nomComplet         String
  label              String
  email              String @default("")
  emailDomain        String @default("")
  organizationalUnit String @default("")

  services Entite[] @relation("EntiteMereToServices")

  entiteTypeId String
  entiteType   EntiteTypeEnum @relation(fields: [entiteTypeId], references: [id])
  entiteMereId String?
  entiteMere   Entite?        @relation("EntiteMereToServices", fields: [entiteMereId], references: [id])

  departementCode String?
  ctcdCode        String?
  regionCode      String?
  regLib          String?
  dptLib          String?

  users            User[]
  uploads          UploadedFile[]
  requeteEntite    RequeteEntite[]
  situationEntites SituationEntite[]
}

model EntiteTypeEnum {
  id    String @id
  label String @unique

  entites Entite[]
}

model RoleEnum {
  id    String @id
  label String @unique

  users User[]
}

model Requete {
  id            String    @id
  commentaire   String    @default("")
  receptionDate DateTime?
  dematSocialId Int?

  receptionTypeId String?
  receptionType   ReceptionTypeEnum? @relation(fields: [receptionTypeId], references: [id])

  declarant PersonneConcernee? @relation("DeclarantRequete")

  participant PersonneConcernee? @relation("ParticipantRequete")

  fichiersRequeteOriginale UploadedFile[]

  etapes         RequeteEtape[]
  situations     Situation[]
  requeteEntites RequeteEntite[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RequeteEntite {
  requeteId String
  requete   Requete @relation(fields: [requeteId], references: [id], onDelete: Cascade)

  statutId String
  statut   RequeteStatusEnum @relation(fields: [statutId], references: [id])

  prioriteId String?
  priorite   RequetePrioriteEnum? @relation(fields: [prioriteId], references: [id])

  entiteId     String
  entite       Entite         @relation(fields: [entiteId], references: [id])
  requeteEtape RequeteEtape[]

  @@id([requeteId, entiteId])
}

model RequeteStatusEnum {
  id    String @id
  label String

  requeteEntites RequeteEntite[]
}

model RequetePrioriteEnum {
  id        String @id
  label     String @unique
  sortOrder Int

  requeteEntites RequeteEntite[]
}

model ReceptionTypeEnum {
  id    String @id
  label String @unique

  requete Requete[]
}

model DemarchesEngagees {
  id                       String    @id @default(uuid())
  dateContactEtablissement DateTime?
  etablissementARepondu    Boolean?
  organisme                String    @default("")
  datePlainte              DateTime?
  commentaire              String    @default("")

  autoriteTypeId String?
  autoriteType   AutoriteTypeEnum? @relation(fields: [autoriteTypeId], references: [id])

  etablissementReponse UploadedFile[]

  demarches DemarchesEngageesEnum[]
  Situation Situation[]
}

model AutoriteTypeEnum {
  id    String @id @default(uuid())
  label String @unique

  demarchesEngagees DemarchesEngagees[]
}

model DemarchesEngageesEnum {
  id                String              @id @default(uuid())
  label             String              @unique
  demarchesEngagees DemarchesEngagees[]
}

model PersonneConcernee {
  id                         String   @id @default(uuid())
  estNonIdentifiee           Boolean?
  estHandicapee              Boolean?
  estIdentifie               Boolean?
  estVictime                 Boolean?
  estVictimeInformee         Boolean?
  victimeInformeeCommentaire String   @default("")
  veutGarderAnonymat         Boolean?
  commentaire                String   @default("")
  autrePersonnes             String   @default("")

  identite Identite? @relation("PersonneIdentite")

  ageId String?
  age   AgeEnum? @relation(fields: [ageId], references: [id])

  adresse Adresse? @relation("PersonneAdresse")

  lienVictimeId      String?
  lienVictime        LienVictimeEnum? @relation(fields: [lienVictimeId], references: [id])
  lienAutrePrecision String?

  declarantDeId String?  @unique
  declarantDe   Requete? @relation("DeclarantRequete", fields: [declarantDeId], references: [id], onDelete: Cascade)

  participantDeId String?  @unique
  participantDe   Requete? @relation("ParticipantRequete", fields: [participantDeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LienVictimeEnum {
  id    String @id @default(uuid())
  label String @unique

  personneConcernees PersonneConcernee[]
}

model AgeEnum {
  id    String @id
  label String @unique

  personneConcernees PersonneConcernee[]
}

model CiviliteEnum {
  id    String @id
  label String @unique

  Identite Identite[]
}

model Identite {
  id          String @id @default(uuid())
  prenom      String @default("")
  nom         String @default("")
  email       String @default("")
  telephone   String @default("")
  commentaire String @default("")

  civiliteId String?
  civilite   CiviliteEnum? @relation(fields: [civiliteId], references: [id])

  personneConcerneeId String            @unique
  personneConcernee   PersonneConcernee @relation("PersonneIdentite", fields: [personneConcerneeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Adresse {
  id         String @id @default(uuid())
  label      String @default("")
  numero     String @default("")
  rue        String @default("")
  codePostal String @default("")
  ville      String @default("")

  personneConcerneeId String?            @unique
  personneConcernee   PersonneConcernee? @relation("PersonneAdresse", fields: [personneConcerneeId], references: [id], onDelete: Cascade)

  lieuDeSurvenueId String?         @unique
  lieuDeSurvenue   LieuDeSurvenue? @relation("LieuAdresse", fields: [lieuDeSurvenueId], references: [id], onDelete: Cascade)
}

model Situation {
  id String @id @default(uuid())

  lieuDeSurvenueId String         @unique
  lieuDeSurvenue   LieuDeSurvenue @relation("SituationLieu", fields: [lieuDeSurvenueId], references: [id], onDelete: Cascade)

  misEnCauseId String
  misEnCause   MisEnCause @relation(fields: [misEnCauseId], references: [id], onDelete: Cascade)

  faits Fait[]

  demarchesEngageesId String
  demarchesEngagees   DemarchesEngagees @relation(fields: [demarchesEngageesId], references: [id], onDelete: Cascade)

  requete   Requete? @relation(fields: [requeteId], references: [id], onDelete: Cascade)
  requeteId String?

  situationEntites SituationEntite[]
}

model SituationEntite {
  situationId String
  situation   Situation @relation(fields: [situationId], references: [id], onDelete: Cascade)

  entiteId String
  entite   Entite @relation(fields: [entiteId], references: [id])

  @@id([situationId, entiteId])
}

model LieuDeSurvenue {
  id               String @id @default(uuid())
  codePostal       String @default("")
  societeTransport String @default("")
  finess           String @default("")
  commentaire      String @default("")
  lieuPrecision    String @default("")

  adresse Adresse? @relation("LieuAdresse")

  lieuTypeId String?
  lieuType   LieuTypeEnum? @relation(fields: [lieuTypeId], references: [id])

  situation Situation? @relation("SituationLieu")

  transportTypeId String?
  transportType   TransportTypeEnum? @relation(fields: [transportTypeId], references: [id])
}

model LieuTypeEnum {
  id    String @id
  label String

  lieuxDeSurvenue LieuDeSurvenue[]
}

model TransportTypeEnum {
  id    String @id
  label String

  lieuxDeSurvenue LieuDeSurvenue[]
}

model MisEnCause {
  id             String  @id @default(uuid())
  rpps           String?
  commentaire    String  @default("")
  autrePrecision String  @default("")

  misEnCauseTypeId String?
  misEnCauseType   MisEnCauseTypeEnum? @relation(fields: [misEnCauseTypeId], references: [id])

  misEnCauseTypePrecisionId String?
  misEnCauseTypePrecision   MisEnCauseTypePrecisionEnum? @relation(fields: [misEnCauseTypePrecisionId], references: [id])

  situation Situation[]
}

model MisEnCauseTypeEnum {
  id    String @id @default(uuid())
  label String @unique

  misEnCauses MisEnCause[]
  precisions  MisEnCauseTypePrecisionEnum[]
}

model MisEnCauseTypePrecisionEnum {
  id    String @id @default(uuid())
  label String @unique

  misEnCauseTypeId String
  misEnCauseType   MisEnCauseTypeEnum @relation(fields: [misEnCauseTypeId], references: [id], onDelete: Cascade)

  misEnCauses MisEnCause[]
}

model Fait {
  situationId String    @id
  situation   Situation @relation(fields: [situationId], references: [id], onDelete: Cascade)

  dateDebut        DateTime?
  dateFin          DateTime?
  commentaire      String    @default("")
  autresPrecisions String    @default("")

  fichiers UploadedFile[]

  motifs            FaitMotif[]
  motifsDeclaratifs FaitMotifDeclaratif[]
  consequences      FaitConsequence[]
  maltraitanceTypes FaitMaltraitanceType[]
}

model MotifEnum {
  id    String @id
  label String

  faits FaitMotif[]
}

model MotifDeclaratifEnum {
  id    String @id
  label String

  faits FaitMotifDeclaratif[]
}

model ConsequenceEnum {
  id    String @id @default(uuid())
  label String @unique

  faits FaitConsequence[]
}

model MaltraitanceTypeEnum {
  id    String @id @default(uuid())
  label String @unique

  faits FaitMaltraitanceType[]
}

model FaitMotif {
  situationId String
  fait        Fait   @relation(fields: [situationId], references: [situationId], onDelete: Cascade)

  motifId String
  motif   MotifEnum @relation(fields: [motifId], references: [id])

  @@id([situationId, motifId])
}

model FaitMotifDeclaratif {
  situationId String
  fait        Fait   @relation(fields: [situationId], references: [situationId], onDelete: Cascade)

  motifDeclaratifId String
  motifDeclaratif   MotifDeclaratifEnum @relation(fields: [motifDeclaratifId], references: [id])

  @@id([situationId, motifDeclaratifId])
}

model FaitConsequence {
  situationId String
  fait        Fait   @relation(fields: [situationId], references: [situationId], onDelete: Cascade)

  consequenceId String
  consequence   ConsequenceEnum @relation(fields: [consequenceId], references: [id])

  @@id([situationId, consequenceId])
}

model FaitMaltraitanceType {
  situationId String
  fait        Fait   @relation(fields: [situationId], references: [situationId], onDelete: Cascade)

  maltraitanceTypeId String
  maltraitanceType   MaltraitanceTypeEnum @relation(fields: [maltraitanceTypeId], references: [id])

  @@id([situationId, maltraitanceTypeId])
}

model RequeteEtape {
  id          String  @id @default(uuid())
  nom         String
  estPartagee Boolean @default(false)

  statutId String
  statut   RequeteEtapeStatutEnum @relation(fields: [statutId], references: [id])

  requeteId String
  requete   Requete @relation(fields: [requeteId], references: [id], onDelete: Cascade)

  entiteId String

  requeteEntite RequeteEntite @relation(fields: [requeteId, entiteId], references: [requeteId, entiteId])

  notes RequeteEtapeNote[]

  clotureReasonId String?
  clotureReason   RequeteClotureReasonEnum? @relation(fields: [clotureReasonId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([requeteId, entiteId, createdAt])
  @@index([requeteId, entiteId])
}

model RequeteEtapeStatutEnum {
  id    String @id
  label String

  requeteEtapes RequeteEtape[]
}

model RequeteEtapeNote {
  id    String @id @default(uuid())
  texte String

  authorId String
  author   User   @relation(fields: [authorId], references: [id])

  uploadedFiles UploadedFile[]

  requeteEtapeId String
  requeteEtape   RequeteEtape @relation(fields: [requeteEtapeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UploadedFile {
  id        String  @id @default(uuid())
  fileName  String
  filePath  String  @unique
  mimeType  String
  size      Int
  status    String  @default("PENDING") // PENDING, PROCESSING, COMPLETED, FAILED
  canDelete Boolean @default(true)

  // File processing status
  scanStatus      String  @default("PENDING") // PENDING, SCANNING, CLEAN, INFECTED, ERROR, SKIPPED
  sanitizeStatus  String  @default("PENDING") // PENDING, SANITIZING, COMPLETED, ERROR, SKIPPED
  safeFilePath    String? // Path to sanitized version of the file (if PDF)
  scanResult      Json? // Detailed scan results (viruses found, etc.)
  processingError String? // Error message if processing failed

  metadata Json?

  entiteId String?
  entite   Entite? @relation(fields: [entiteId], references: [id])

  uploadedById String?
  uploadedBy   User?   @relation(fields: [uploadedById], references: [id])

  requeteEtapeNoteId String?
  requeteEtapeNote   RequeteEtapeNote? @relation(fields: [requeteEtapeNoteId], references: [id], onDelete: Cascade)

  requeteId String?
  Requete   Requete? @relation(fields: [requeteId], references: [id], onDelete: Cascade)

  fait            Fait?   @relation(fields: [faitSituationId], references: [situationId], onDelete: Cascade)
  faitSituationId String?

  demarchesEngagees   DemarchesEngagees? @relation(fields: [demarchesEngageesId], references: [id])
  demarchesEngageesId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([entiteId])
}

model ChangeLog {
  id          String   @id @default(cuid())
  entity      String
  entityId    String
  action      String // e.g. "ADDED", "EDITED", "DELETED"
  before      Json?
  after       Json?
  changedById String?
  changedBy   User?    @relation(fields: [changedById], references: [id])
  changedAt   DateTime @default(now())

  @@index([entity, entityId])
  @@index([changedById])
}

model Crons {
  id        String    @id @default(uuid())
  name      String
  params    Json?
  result    Json?
  state     String
  createdAt DateTime  @default(now())
  startedAt DateTime
  endedAt   DateTime?
}

model RequeteClotureReasonEnum {
  id     String         @id @default(uuid())
  label  String         @unique
  etapes RequeteEtape[]
}
