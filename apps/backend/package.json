{
  "name": "@sirena/backend",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "pkgroll --tsconfig tsconfig.build.json",
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "generate:openAPI": "tsx src/swagger/gen-openAPI-swagger.ts",
    "lint:staged": "git diff --cached --name-only --diff-filter=ACM | grep '^packages/backend/' | sed 's|^packages/backend/||' | grep -E '\\.(js|ts|tsx|jsx|json|md)$' | xargs -r pnpm biome check",
    "lint": "biome check"
  },
  "exports": {
    ".": {
      "import": {
        "default": "./dist/index.js",
        "types": "./dist/index.d.ts"
      }
    },
    "./swagger": "./src/swagger/openAPI.json",
    "./hc": {
      "import": {
        "default": "./dist/hc.js",
        "types": "./dist/hc.d.ts"
      }
    }
  },
  "dependencies": {
    "@hono/node-server": "^1.14.0",
    "@hono/zod-validator": "^0.4.3",
    "@scalar/hono-api-reference": "^0.8.0",
    "@sirena/database": "workspace:*",
    "hono": "^4.7.5",
    "hono-openapi": "^0.4.6",
    "hono-pino": "^0.8.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.24.2",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^20.11.17",
    "pkgroll": "^2.12.1",
    "tsx": "^4.7.1"
  }
}
